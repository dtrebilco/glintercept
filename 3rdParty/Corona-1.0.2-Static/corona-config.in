#!/bin/sh

usage()
{
    cat <<EOF
Usage: corona-config [OPTIONS]
Options:
        [--prefix]
        [--version]
        [--cxxflags]
        [--libs]
EOF
    exit $1
}

if test $# -eq 0; then
    usage 1 1>&2
fi

while test $# -gt 0; do
    case "$1" in
        -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
        *) optarg= ;;
    esac

    case $1 in
        --prefix)
            echo @prefix@
            ;;
        --version)
            echo @VERSION@
            ;;
        --cxxflags)
            echo -I@prefix@@includedir@
            ;;
        --libs)
            echo -L@prefix@@libdir@ -lcorona @EXTRA_LIBS@
            ;;
        *)
            usage 1 1>& 2
            ;;
    esac
    shift
done
